<%- include("./partials/header.ejs") %>

<div class="container">
    <div class="row mt-4">
        <div class="col-12 col-xl-6 show_image-container">
            <img
                src="<%= game.image %> "
                alt="Picture from the game <%= game.title %>"
                srcset=""
            />
        </div>
        <div class="col-12 col-xl-6 show_details-container">
            <h1><%= game.title %></h1>
            <p><%= game.description %></p>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Developer</th>
                        <td><%= game.developer %> </td>
                       
                    </tr>
                    <tr>
                        <th scope="row">Publisher</th>
                        <td><%= game.publisher %> </td>
                    </tr>
                    <tr>
                        <th scope="row">Genre</th>
                        <td><%= game.genre %> </td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td><%= game.date %> </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row show_comment-header mt-3">
        COMMENT HEADER
    </div>
    <div class="row show_comment-container py-2">
        <div class="col-3">
            Username
        </div>
        <div class="col-9">Comment text Here</div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
