<%- include('partials/header') %>
<div class="container">
    <h1>Edit game </h1>
    <form action="/games/<%=game._id%>?_method=PUT  " method="POST">
        <div class="form-group mt-3">
            <label for="title">Title</label>
            <input
                type="text"
                class="form-control"
                name="title"
                value="<%= game.title %> "
                
            />
        </div>

        <div class="form-group mt-3">
            <label for="genre">Game genre</label>
            <select name="genre" id="genre" class="form-control">
                <option disabled selected >-- Choose below --</option>
                <option value="0" <%=  game.genre === '0' ? 'selected' : '' %> >Action</option>
                <option value="1" <%= game.genre === '1' ? 'selected' : '' %>    >Fighting</option>
                <option value="2" <%= game.genre === '2' ? 'selected' : '' %>  >Stealth</option>
                <option value="3" <%= game.genre === '3' ? 'selected' : '' %>  >Survival horror</option>
                <option value="4" <%= game.genre === '4' ? 'selected' : '' %>  >Adventure</option>
                <option value="5" <%= game.genre === '5' ? 'selected' : '' %>  >RPG</option>
                <option value="6" <%= game.genre === '6' ? 'selected' : '' %>  >Battle Royale</option>
                <option value="7" <%= game.genre === '7' ? 'selected' : '' %>  >Simulation</option>
                <option value="8" <%= game.genre === '8' ? 'selected' : '' %>  >Racing</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="date">Date of release</label>
            <input type="date" class="form-control" name="date"  value="<%= game.date.toISOString().split("T")[0] %>" />
        </div>

        <div class="form-group mt-3">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" value="<%= game.description %>"/>
        </div>

        <div class="form-group mt-3">
            <label for="developer">Game developer</label>
            <input
                type="text"
                class="form-control"
                name="developer"
                value="<%= game.developer %>"
            />
        </div>

        <div class="form-group mt-3">
            <label for="publisher">Publisher of the game</label>
            <input
                type="text"
                class="form-control"
                name="publisher"
                value="<%= game.publisher %>"
            />
        </div>

        <div class="form-group mt-3">
            <label for="image">Link to image</label>
            <input type="text" class="form-control" name="image" value="<%= game.image %>"/> 
        </div>

        <button type="submit" class="btn my-4 btn-primary" >Submit</button>
    </form>
</div>
<%- include('partials/footer') %>
