<%- include('partials/header') %>
<div class="container">
    <h1>Add a new game</h1>
    <!-- TODO  
                    ADD -> date: Date -->
    <form action="/games " method="POST">
        <div class="form-group mt-3">
            <label for="title">Title</label>
            <input
                required
                type="text"
                class="form-control"
                name="title"
                placeholder="Ex: Fallout 3"
                autofocus
            />
        </div>

        <div class="form-group mt-3">
            <label for="genre">Game genre</label>
            <select name="genre" id="genre" class="form-control required">
                <option disabled selected>-- Choose below --</option>
                <option value="0">Action</option>
                <option value="1">Fighting</option>
                <option value="2">Stealth</option>
                <option value="3">Survival horror</option>
                <option value="4">Adventure</option>
                <option value="5">RPG</option>
                <option value="6">Battle Royale</option>
                <option value="7">Simulation</option>
                <option value="8">Racing</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="date">Date of release</label>
            <input type="date" class="form-control" name="date" required />
        </div>

        <div class="form-group mt-3">
            <label for="description">Description</label>
            <input
                type="text"
                class="form-control"
                name="description"
                required
            />
        </div>

        <div class="form-group mt-3">
            <label for="developer">Game developer</label>
            <input
                type="text"
                class="form-control"
                name="developer"
                placeholder="Ex: Random Games"
                required
            />
        </div>

        <div class="form-group mt-3">
            <label for="publisher">Publisher of the game</label>
            <input
                type="text"
                class="form-control"
                name="publisher"
                placeholder="Ex: Guerilla Games, Ubisoft, etc..."
                required
            />
        </div>

        <div class="form-group mt-3">
            <label for="image">Link to image</label>
            <input type="text" class="form-control" name="image" required />
        </div>

        <button type="submit" class="btn my-4 btn-primary">Submit</button>
    </form>
</div>
<%- include('partials/footer') %>
